<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
  "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      i18n:domain="voteit.irl">
<head>
    <meta http-equiv="content-type" content="text/html; charset=utf-8" />
    <title>${context.title}</title>
    <script type="text/javascript" src="${request.application_url}/translations.js"></script>
</head>
<body>
<div id="wrapper">
    <div id="header">
        <h1 id="agenda_item_title" class="icon large-iconpadding">${context.title}</h1>
        <div id="ai_quick_menu" class="dropdown_menu">
            <a class="menu_header" href="#">
                <span class="icon-right arrow-right" i18n:translate="">Agenda items</span>
            </a>
            <ul class="menu_body">
            <tal:iterate condition="ai_brains" repeat="ai_brain ai_brains">
                <li>
                    <a href="${ai_brain['path']}/projector" tal:content="ai_brain['title']">Title</a>
                </li>
            </tal:iterate>
            </ul>
        </div>
    </div>

    <div class="col-65-35">
        <div class="column column-1">
            <div id="active">
                <h3 i18n:translate="">Active</h3>
                <ul>
                </ul>
            </div>
        </div>
        <div class="column column-2">
            <div id="inactive">
                <h3 i18n:translate="">Proposals</h3>
                <ul tal:condition="proposals">
                <tal:iterate repeat="proposal proposals" >
                    <span tal:replace="structure render_proposal(proposal, request)">Proposal</span>
                </tal:iterate>
                </ul>
            </div>
        </div>
    </div>


</div>

