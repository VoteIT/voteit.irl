<div xmlns:tal="http://xml.zope.org/namespaces/tal"
     xmlns:i18n="http://xml.zope.org/namespaces/i18n"
     i18n:domain="voteit.irl">

    <div tal:condition="not mp_util.open"
         i18n:translate="register_closed_cant_set_status">The register is closed, you can't set your status right now.</div>

    <div tal:condition="is_registered and mp_util.open"
         i18n:translate="presence_registered_register_not_closed_yet">Your presence is registered, but the register hasn't closed yet. You don't need to do anything else.</div>

    <div tal:condition="is_registered and not mp_util.open"
         i18n:translate="presence_registered_and_now_active">Your presence was registered and will be part of the next electoral register.</div>

    <div tal:condition="not is_registered"
         i18n:translate="not_registered_as_present_in_meeting">You're not registered as present within this meeting.</div>

    <br/><br/>

    <div tal:condition="mp_util.open and not is_registered">
      <a class="btn btn-success"
         data-clickable-target
         data-replace-target="#register_current_status"
         href="${request.resource_url(context, '_register_set_attending')}">
       <span data-actionmarker="glyphicon glyphicon-refresh rotate-me"></span>      
       <span i18n:translate="set_as_present_button">Set yourself as present</span></a>
    </div><br/>

    <div tal:condition="not mp_util.open and request.is_moderator">
        <a class="btn btn-primary"
           href="${request.resource_url(context, '_toggle_presence_check')}"
           i18n:translate="start_presence_check_button">Clear and start availability check</a>
    </div>

    <div tal:condition="mp_util.open and request.is_moderator">
        <a class="btn btn-warning"
           href="${request.resource_url(context, '_toggle_presence_check')}"
           i18n:translate="end_presence_check_button">Close check</a>
    </div>

    <div tal:condition="request.is_moderator">
        <hr/>
        <h3 i18n:translate="">Available participants</h3>
        <ul>
            <li tal:repeat="userid mp_util.present_userids"><b>${repeat['userid'].number}:</b> ${userid}</li>
        </ul>
    </div>

</div>
