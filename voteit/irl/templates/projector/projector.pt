<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
  "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      i18n:domain="voteit.irl">
<head>
    <meta http-equiv="content-type" content="text/html; charset=utf-8" />
    <title>${context.title}</title>
    <script type="text/javascript" src="${request.application_url}/translations.js"></script>
</head>
<body>
<div id="wrapper">
    <div id="header">
        <div id="heading-wrapper">
            <img tal:condition="api.meeting and api.meeting.get_field_value('meeting_logo_url')"
                 id="meeting-logo"
                 src="${api.meeting.get_field_value('meeting_logo_url')}"
                 alt="Meeting logo" i18n:attributes="alt" />
            <img id="voteit-logo" src="${request.application_url}/static/images/voteit_logo.png" />
            <h1>${context.title}</h1>
            <div class="clear"><!-- --></div>
        </div>
        <a class="icon iconpadding arrow-left" href="${request.resource_url(context)}"
           i18n:translate="">Back</a>
        <div id="ai_quick_menu" class="dropdown_menu">
            <a class="menu_header" href="#">
                <span class="icon-right arrow-right" i18n:translate="">Agenda items</span>
            </a>
            <ul class="menu_body">
            <tal:iterate condition="ai_brains" repeat="ai_brain ai_brains">
                <li>
                    <a href="${ai_brain['path']}/projector" tal:content="ai_brain['title']">Title</a>
                </li>
            </tal:iterate>
            </ul>
        </div>
    </div>

    <div class="col-65-35">
        <div class="column column-1">
            <div id="active">
                <ul>
                </ul>
            </div>
        </div>
        <div class="column column-2">
            <div id="inactive">
                <ul tal:condition="proposals">
                <tal:iterate repeat="proposal proposals" >
                    <span tal:replace="structure render_proposal(proposal, request)">Proposal</span>
                </tal:iterate>
                </ul>
            </div>
        </div>
    </div>

</div>
</body>
</html>
